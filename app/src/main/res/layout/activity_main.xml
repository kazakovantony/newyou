<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:orientation="vertical"    tools:context="com.itbulls.newyou.app.view.component.base.impl.view.TestDataView">    <TextView        android:id="@+id/connectionStatus"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="0.06"        android:gravity="center"        android:textSize="24sp"        android:textStyle="bold" />    <Button        android:id="@+id/buttonChangeMode"        android:layout_width="fill_parent"        android:layout_height="wrap_content"        android:onClick="buttonChangeMode"        android:text="@string/buttonStart"        android:textSize="12sp"        android:textStyle="bold" />    <ListView        android:id="@+id/workouts"        android:layout_width="match_parent"        android:layout_height="0dip"        android:layout_weight="0.9" />    <TextView        android:id="@+id/currentActivity"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_weight="0.06"        android:gravity="center"        android:textSize="14sp"        android:textStyle="bold" /></LinearLayout>